<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@color/md_white_1000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/nuevo"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:foreground="?selectableItemBackgroundBorderless"
            android:gravity="start"
            android:text="Nueva Fruta"
            android:textColor="@color/primaryColor"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/txtclose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonclosestyle"
            android:clickable="true"
            android:foreground="?selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="X"
            android:textColor="@color/primaryColor"
            android:textStyle="bold"/>
    </LinearLayout>

        <!--<ImageView android:src="@drawable/logomobil"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="85dp"-->
            <!--android:layout_marginBottom="3dp"-->
            <!--android:layout_gravity="center_horizontal" />-->


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp">

        <EditText android:id="@+id/input_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:textAllCaps="true"
            android:hint=" Nombre de Fruta" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:weightSum="2">

        <!--  Name Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/input_kcal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Calorías"
                android:textAllCaps="true"
                android:inputType="numberDecimal"
                android:maxLength="10"/>
        </android.support.design.widget.TextInputLayout>

        <!--  Name Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1">
            <EditText android:id="@+id/input_grasas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textAllCaps="true"
                android:hint=" Grasas"
                android:maxLength="20"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:weightSum="2">

        <!--  Name Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/input_proteinas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Proteínas"
                android:textAllCaps="true"
                android:inputType="numberDecimal"
                android:maxLength="10"/>
        </android.support.design.widget.TextInputLayout>

        <!--  Name Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1">
            <EditText android:id="@+id/input_carbo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textAllCaps="true"
                android:hint=" Carbohidratos"
                android:maxLength="20"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
        <!-- Direccion Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp">

            <EditText
                android:id="@+id/descripcion_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:hint=" Descripcíon"
                android:inputType="textMultiLine"
                android:lines="5"
                android:maxLines="10"
                android:padding="10dp"
                android:textColor="#000" />

        </android.support.design.widget.TextInputLayout>


        <!-- Email Label -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:weightSum="2">

            <Spinner
                android:id="@+id/primer_mes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/ultimo_mes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"/>


        </LinearLayout>

        <!-- Signup Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/agregar_fruta"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:background="@color/accentColor"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="Agregar"/>

    </LinearLayout>
</ScrollView>