<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/md_white_1000"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="3">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/nuevo"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:foreground="?selectableItemBackgroundBorderless"
                android:gravity="start"
                android:text="Nuevo tip Salud"
                android:textColor="@color/primaryColor"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/txtclose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttonclosestyle"
                android:clickable="true"
                android:foreground="?selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="X"
                android:textColor="@color/primaryColor"
                android:textStyle="bold"/>
        </LinearLayout>

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_weight="1"
        android:background="@color/md_white_1000">
            <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="30dp"-->
                <!--android:clickable="true"-->
                <!--android:text="@string/seleccione_una_fruta"-->
                <!--android:textSize="18sp"-->
                <!--android:focusable="true" />-->

            <!-- Email Label -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="1dp">

                <Spinner
                    android:id="@+id/spFruta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">

                <EditText android:id="@+id/input_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:textAllCaps="true"
                    android:hint=" Nombre" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp">

                <EditText
                    android:id="@+id/descripcion_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:hint=" DescripciÃ³n"
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:padding="3dp"
                    android:textColor="#000"
                    android:scrollbars="vertical"/>

            </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </ScrollView>


        <!-- Signup Button -->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/agregar_salud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="22dp"
            android:background="@color/accentColor"
            android:layout_gravity="bottom"
            android:textColor="#fff"
            android:textSize="18sp"
            android:text="Agregar"/>

    </LinearLayout>
</LinearLayout>